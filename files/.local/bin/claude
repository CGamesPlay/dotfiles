#!/usr/bin/env bash
# @describe Claude Code Wrapper
# @meta version wrapper has no version, use --claude-version
# @flag      --claude-help     Show help for Claude
# @flag      --claude-version  Show versio for Claude
# @arg       args~             Additional arguments for Claude

set -eu

# Claude doesn't like using an external key
unset ANTHROPIC_API_KEY
# Undocumented method to set the config directory
export CLAUDE_CONFIG_DIR=$HOME/.config/claude

main() {
	if [ -z "$NVM_DIR" ]; then
		echo 'NVM_DIR is not set'
		return 1
	fi
	set +eu
	. "$NVM_DIR/nvm.sh"
	nvm use --lts --silent
	set -eu

	if ! npm list -g @anthropic-ai/claude-code >/dev/null; then
		echo "Claude Code is not installed. Installing..." >&2
		npm install -g @anthropic-ai/claude-code
		claude config set --global preferredNotifChannel iterm
	fi
	exec claude "${argc_args[@]}" ${argc_claude_help+--help} ${argc_claude_version+--version}
}

if ! command -v argc >/dev/null; then
	echo "This command requires argc. Install from https://github.com/sigoden/argc" >&2
	exit 100
fi
eval "$(argc --argc-eval "$0" "$@")"
