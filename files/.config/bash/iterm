function ding {
    @iterm play-sound OOT_PressStart
}

function bonk {
    @iterm play-sound MM_Tatl_Alarm
}

function sound_status {
    local last_status=$?
    test $last_status -eq 0 && ding || bonk
    @iterm bounce --forever
    if test -z "$@"; then
        @iterm notify "Command finished with status $last_status"
    else
        @iterm notify "$@ finished with status $last_status"
    fi
    return $last_status
}

# vi:ft=sh
