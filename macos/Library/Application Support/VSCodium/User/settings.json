{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[plaintext]": {
    "editor.suggest.showWords": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "docker.containers.description": ["Image", "Status"],
  "docker.containers.label": "ContainerName",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",
  "editor.dragAndDrop": false,
  "editor.fontFamily": "Consolas, monospace",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.gotoLocation.alternativeDefinitionCommand": "editor.action.goToTypeDefinition",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": false,
  "editor.parameterHints.enabled": false,
  "editor.quickSuggestions": {
    "other": "inline"
  },
  "editor.renderLineHighlight": "none",
  "editor.showUnused": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "deepIndent",
  "emmet.showAbbreviationSuggestions": false,
  "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.bats": "shellscript",
    "*.nomad": "hcl"
  },
  "files.insertFinalNewline": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.statusBar.enabled": false,
  "go.enableCodeLens": {
    "runtest": false
  },
  "remote.SSH.configFile": "/Users/rpatterson/.ssh/config.local",
  "search.useGlobalIgnoreFiles": true,
  "testing.automaticallyOpenPeekView": "never",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [{ "before": ["j", "k"], "after": ["<Esc>"] }],
  "vim.leader": ",",
  "vim.mouseSelectionGoesIntoVisualMode": false,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [";"], "after": [":"] },
    { "before": ["Q", "Q"], "after": ["V", "g", "q"] },
    { "before": ["<leader>", "/"], "commands": [":nohlsearch"] },
    { "before": ["n"], "after": ["/", "<CR>"] },
    { "before": ["N"], "after": ["?", "<CR>"] },
    { "before": ["<C-j>"], "commands": ["workbench.action.focusPanel"] }
    // I have these disabled because gj and gk do not remember the column they were on
    //{ "before": ["j"], "after": ["g", "j"] },
    //{ "before": ["k"], "after": ["g", "k"] },
    //{ "before": ["g", "j"], "after": ["j"] },
    //{ "before": ["g", "k"], "after": ["k"] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["Q"], "after": ["g", "q"] }
  ],
  "vim.whichwrap": "b,s",
  "window.autoDetectColorScheme": true,
  "window.clickThroughInactive": false,
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "none",
  "workbench.editor.navigationScope": "editor",
  "workbench.startupEditor": "none",
  "explorer.confirmDelete": false,
  "[shellscript]": {
    "editor.insertSpaces": false,
    "files.eol": "\n"
  },
  "[terraform]": {
    "editor.formatOnSave": false
  },
  "[terraform-vars]": {
    "editor.formatOnSave": false
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "workbench.colorTheme": "Default Light Modern",
  "terraform.languageServer.enable": false
}
