#!/usr/bin/env bash
# This is a bash script that runs the appropriate iTerm2 python environment.
''''exec "$(printf "%s\n" ~/.config/iterm2/AppSupport/iterm2env/versions/*/bin/python | sort -t/ -k9 -V | tail -1)" "$0" "$@"
'''  # fmt: skip

import iterm2
import sys


async def main(connection: iterm2.Connection):
    app = await iterm2.async_get_app(connection)
    window = await iterm2.Window.async_create(connection, command=sys.argv[1])
    await window.async_activate()
    await app.async_activate()


iterm2.run_until_complete(main)

# vim:ft=python:expandtab:ts=4
